#!/usr/bin/env bash
set -eu

echo "ğŸ”µ push"
source hooks/.config

# 1. push all images
BUILD_NAME="${IMAGE_NAME//index.docker.io\/}"

for arch in ${verified_build_architectures[@]}; do
  echo "âœ… Pushing ${BUILD_NAME}-${arch}"
  echo "â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯"
  echo
  docker push ${BUILD_NAME}-${arch}
done

docker image ls

# 2. build and push manifest
#DOCKER_REPO="index.docker.io/${DOCKER_REPO}"
manifests=""

for arch in ${verified_build_architectures[@]}; do
  manifests="${manifests} ${BUILD_NAME}-${arch}"
done

echo "âœ… Creating manifest ${BUILD_NAME}"
echo "â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯"
docker manifest create ${BUILD_NAME} \
                            $manifests
echo

echo "âœ… Annotating manifest"
echo "â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯"
for arch in ${verified_build_architectures[@]}; do
    if [ -n "${docker_to_variant_map[${arch}]}" ]; then
      docker manifest annotate ${BUILD_NAME} \
        ${BUILD_NAME}-${arch} \
        --os linux \
        --arch ${docker_to_manifest_map[${arch}]} \
        --variant ${docker_to_variant_map[${arch}]}
    else
      docker manifest annotate ${BUILD_NAME} \
        ${BUILD_NAME}-${arch} \
        --os linux \
        --arch ${docker_to_manifest_map[${arch}]}
    fi
done

echo "âœ… Inspecting manifest ${BUILD_NAME}-${arch}"
echo "â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯"
docker manifest inspect ${BUILD_NAME}-${arch}
echo

echo "âœ… Pushing manifest ${BUILD_NAME}"
echo "â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯â¯"
docker manifest push --purge "${BUILD_NAME}"
echo

echo
echo "ğŸ˜Š"
